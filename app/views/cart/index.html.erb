<% if @cart.empty? %>
<p>You have not added any courses yet</p>
<% end %>

<p id="notice"><%= notice %></p>

<div id="lessonsContainer">
    <table id="customers">
        <% total = 0 %>
        <% @cart.each do |id, quantity| %>
        
        <% lesson = Lesson.find_by_id(id) %>
        <% quantity= quantity %>
        <% category= lesson.category_name %>
        <% timx = (quantity * lesson.price)%> 
        
        
        <% total += quantity * lesson.price %>            
        
        
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag lesson.image_url, :style =>"height:40px"), lesson %>
                </div>
                
            </td>
            
            <td class="title"><%= link_to lesson.title, lesson %></td>
            <td><a href="/cart/remove/<%= lesson.id %>">Remove From Cart</a></td>
            <td class="price"><%= number_to_currency(lesson.price, :unit =>"€") %></td>
            <td class="quantity"><%= quantity %></td>            
            <td class="price"><%= number_to_currency(timx, :unit =>"€") %></td>
           
            
        </tr>
        

         <% end %>
         <tr>
            Grand Total: <%= number_to_currency(total, :unit => "€") %>
          </tr>
          
           <tr>
             <td>
            <a href="/lessons" class="button">Book Another Course</a> 
            </td>
            
           
            <td>
                <a href="/clearcart" class="button">Empty Cart</a>
            </td>
            <td>
                <a href="/checkout" class="button">Checkout</a>
            </td>
            
          </tr>
           
    </table>
</div>