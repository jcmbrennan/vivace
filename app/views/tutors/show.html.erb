<div class = "container">
	<div class = "row">
		<div class = "col-md-7">
			<%= image_tag @tutor.image_url %>
		</div>

		<div class = "col-md-5">

			<h1><%= @tutor.name %></h1>
			<hr>
			<em><%= @tutor.desc %></em>
			<hr>
			<p><%= @tutor.category %></p>
			<hr>
			<%=link_to "View all tutors", tutors_path %> 
			<%= link_to '| Edit', edit_tutor_path(@tutor) if logged_in?(:site_admin)%>
		</div>
	</div>
</div>