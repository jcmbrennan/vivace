<div class = "container">
  <div class = "row">
    <div class = "col-md-7">
      <%= image_tag @category.image %>
    </div>

    <div class = "col-md-5">
      <h1><%= @category.title %></h1>
      <hr>
      <em><%= @category.description %></em>
      <hr>
      <%=link_to "View all course types", categories_path %> 
      <%= link_to '| Edit', edit_category_path(@category) if logged_in?(:site_admin)%>      
    </div>
  </div>
</div> 